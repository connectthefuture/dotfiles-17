# Add my bin dir to PATH
export PATH=$PATH:/home/xavier/bin/

# Configure NVM for nodejs
export NVM_DIR="/home/xavier/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"  # This loads nvm

# Configure rbenv for ruby
export PATH="$HOME/.rbenv/bin:$PATH"
eval "$(rbenv init -)"

# Hack LD_LIBRARY_PATH in order to keep sound managing possible
export LD_LIBRARY_PATH=/usr/lib/vmware/lib/libglibmm-2.4.so.1/:$LD_LIBRARY_PATH

# Configure Yarn for Nodejs
export PATH="$PATH:`yarn global bin`"

# Configure Go
export PATH=$PATH:/usr/local/go/bin
export GOPATH=~/Programmation/GO

# Call my other bash scripts
source ~/dotfiles/my_aliases
source ~/dotfiles/my_functions
source ~/dotfiles/my_prompt
